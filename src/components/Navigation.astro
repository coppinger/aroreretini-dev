---
const { menu, path } = Astro.props;
---

<nav class="flex justify-between mt-8 mb-16">
  <a href="/" class="text-gray"> Learning, growing & building in public</a>
  <menu class="flex gap-6">
    {
      menu.map((item, index) => {
        return (
          <>
            <li>
              <a
                href={`/${item.url}`}
                class={
                  "flex gap-2 items-center " +
                  (path === `/${item.url}` || `/${item.name}` === "Home"
                    ? "text-white"
                    : "text-gray")
                }
              >
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 16 16"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d={item.icon}
                    fill={
                      path === `/${item.url}` || `/${item.name}` === "Home"
                        ? "white"
                        : "#868686"
                    }
                  />
                </svg>
                {item.name}
              </a>
            </li>
            {/* If this isn't the last item in the menu array, add a em dash divider */}
            {index !== menu.length - 1 && <p class="text-gray font-bold">â€”</p>}
          </>
        );
      })
    }
  </menu>
</nav>
