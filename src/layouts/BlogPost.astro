---
import Layout from "./Layout.astro";
import IntroHeader from "../components/IntroHeader.astro";
import BlogPostPreview from "../components/BlogPostPreview.astro";
const { frontmatter: post } = Astro.props;
const { title, pubDate, tags, id, url } = post;
---

<Layout title="Writing" cols="1fr_2px_4fr">
  <div class="vl"></div>
  <div class="flex flex-col gap-8">
    <BlogPostPreview
      post=""
      postNumber={id}
      postTitle={title}
      postTags={tags}
      postUrl={url}
      postDate={pubDate}
      previewToggle={true}
    />
    <hr />
    <section>
      <article class="prose prose-invert prose-lg">
        <slot />
      </article>
    </section>
  </div>
</Layout>
